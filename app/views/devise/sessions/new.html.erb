<div class="container bg-dark rounded text-white pb-1 mb-2">
  <h1 class="display-4">Log in</h1>
</div>

<div class="container bg-dark rounded text-white py-2">
  <div class="row">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'You@email.com', class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= f.submit "Log in", class: 'btn btn-secondary' %>
    <% end %>
    </div>
    <div class="col">
    </div>
  </div>


  <%= render "devise/shared/links" %>
</div>
