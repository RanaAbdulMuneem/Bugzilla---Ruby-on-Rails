<div class="container bg-dark rounded text-white pb-2 mb-1">
  <h1 class="display-4"><%= @project.title %></h1>

  <hr>
  <% if type == 'Manager' %>
    <div class="d-flex">
      <div class="mr-auto p-2"><%= link_to 'Back', manager_projects_path, class: 'btn btn-secondary' %></div>
      <div class="p-2"><%= link_to 'Edit', edit_manager_project_path(@project), class: 'btn btn-info' %></div>
      <div class="p-2"><%= link_to 'Destroy', manager_project_path(@project),
      method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></div>
    </div>

  <% elsif type == 'Developer' %>
    <div class="d-flex">
      <div class="mr-auto p-2"><%= link_to 'Back', developer_projects_path, class: 'btn btn-secondary' %></div>
    </div>

  <% elsif type == 'QualityAssurance' %>
    <div class="d-flex">
      <div class="mr-auto p-2"><%= link_to 'Back', quality_assurance_projects_path, class: 'btn btn-secondary' %></div>
      <div class="p-2"><%= link_to 'Report new change', new_quality_assurance_project_change_request_path(@project), class: 'btn btn-success' %></div>
    </div>


  <% end %>
</div>


<hr>
