<div class="container bg-dark text-white rounded py-2">
  <div class="row">
    <div class="col">
      <%= form_with(model: project, url: url, local: true) do |form| %>
        <% if project.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

            <ul>
            <% project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field form-group">
          <%= form.text_field :title, placeholder: 'Project title', class: 'form-control' %>
        </div>

        <div class="field" style="display:none;">
          <%= form.label :user_id %>
          <%= form.text_field :user_id, value: current_user.id%>
        </div>

        <%= form.submit class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="col">
    </div>
  </div>
</div>

