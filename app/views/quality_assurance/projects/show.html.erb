<%= render 'layouts/project', type: current_user.type%>

<h2>Your Change Requests</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Deadline</th>
      <th>Type</th>
      <th>Status</th>
      <th colspan=3>Links</th>
    </tr>
  </thead>
  <% @change_requests.each do |change| %>
    <tr>
      <td><%= change.title %></td>
      <td><%= change.deadline %></td>
      <td><%= change.type %></td>
      <td><%= change.status %></td>
      <td>show</td>
    </tr>
  <% end %>
</table>

<%= link_to 'Report new change', new_quality_assurance_project_change_request_path(@project)%>
